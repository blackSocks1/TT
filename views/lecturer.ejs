    <script type="module" src="js/lecturerMain.js" defer></script>

    <title><%= user.accountType %> | <%= user.name %></title>
  </head>
  <body onload="myFunction()">
    <div class="accInfo">
      <output class="myData" style="display: none"><%=user._id %></output>
      <output class="myData" style="display: none"><%=user.name %></output>
    </div>

