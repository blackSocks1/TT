    <nav class="navbar navbar-expand-lg timetableNav">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">
          <img src="assets/images/icon.png" alt="" width="60" height="40" />
        </a>

        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNavAltMarkup"
          aria-controls="navbarNavAltMarkup"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <i class="fa fa-bars" style="color: white; font-size: 24px"></i>
        </button>

        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item normalTimetable">
              <a class="nav-link" href="#" id="timetable" onclick="displayTimetable()">Timetable</a>
            </li>
            <li class="nav-item availableTimetable">
              <a class="nav-link" href="#" id="availTimetable" onclick="displayAvailTime()"
                >Availability Timetable</a
              >
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="w3-row normalTime">
      <div class="w3-quarter w3-container w3-hide-small">
        <div class="w3-card-4 w3-round-large w3-animate-top">
          <div class="w3-container notice">
            <p class="mt-4">
              <span>Welcome <%= user.name %></span><br />
              You can view the most recent timetable by clicking on the get timetable button
            </p>
            <hr />
            <p class="mt-4" id="periodInfo"></p>
          </div>
        </div>
      </div>

      <div class="w3-half w3-container timetable">
        <h1>WEEKLY SCHEDULE</h1>

        <div class="w3-card w3-display-container ttDiv">
          <div class="table-responsive" id="displayTTContainer"></div>
          <div id="TTnavSection"></div>
        </div>
      </div>
    </div>

    <div class="w3-row availTime" style="display: none">
      <div class="w3-round-large w3-animate-right">
        <div class="w3-container availTimetable">
          <div class="text-center"><h1>AVAILABILITY TIMETABLE</h1></div>

          <div class="w3-card w3-display-container ttDiv">
            <div class="table-responsive" id="availTTContainer"></div>
          </div>
        </div>
      </div>
    </div>

    <hr />
    <br /><br />

    <div id="snackbar"></div>

    <!-- The Modal -->
    <div id="myModal" class="modal">
      <!-- Modal content -->
      <div class="modal-content">
        <div class="modal-header">
          <h2 id="modalHeader">Modal Header</h2>
          <span class="close" id="modalClose">&times;</span>
        </div>

        <div class="modal-body" id="modalBody"></div>

        <div class="modal-footer">
          <h3 id="modalFooter">Modal Footer</h3>
        </div>
      </div>
    </div>

    <script src="assets/js/bootstrap.bundle.min.js"></script>
    <script src="assets/js/lecturer_interface.js"></script>
    <script src="assets/jquery/jquery.min.js"></script>
  </body>

  <%- include('partials/authFooter') -%>
